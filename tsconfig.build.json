{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2015",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "module": "es6"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
